<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:theme="@style/AppTheme.FloatingWindow">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material_updater_desc"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/material_updater_update"
        android:id="@+id/material_updater_update"
        style="@style/AppTheme.CheckBox.Yellow"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_updater_progress"
        android:visibility="gone" />
</LinearLayout>